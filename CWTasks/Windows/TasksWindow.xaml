<Window x:Class="CWTasks.Windows.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CWTasks.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CWTask Manager" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="QMark" Height="30" Width="30" Content="?" HorizontalAlignment="Center" 
                Margin="330, 114, 0, 0" FontFamily="TimesNewRoman" FontSize="20" Click="QMark_Click"></Button>
        <Button x:Name="Task1" Content="#1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" 
                Height="20" Width="20" FontFamily="TimesNewRoman" FontSize="12" Click="Task1_Click"></Button>
        <Button x:Name="Task2" Content="#2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,10,0,0" 
                Height="20" Width="20" FontFamily="TimesNewRoman" FontSize="12" Click="Task2_Click"></Button>
    </Grid>
</Window>
