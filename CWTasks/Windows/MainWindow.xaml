<Window x:Class="CWTasks.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CWTasks.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CWTasks" Height="160" Width="420"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="MainText" Text="Hello there! My name is Nikolay. And this is my solutions for CodeWars tasks. Click the button below to start this application." TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="TimesNewRoman" FontSize="20" TextAlignment="Center"></TextBlock>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Center" Margin="0,77,0,0" VerticalAlignment="Top" FontFamily="TimesNewRoman" FontSize="20" Width="296" Click="StartButton_Click"/>

    </Grid>
</Window>
